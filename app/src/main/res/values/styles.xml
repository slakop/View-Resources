<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button">parent="Widget.Material3.Button">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.TitleMedium</item>
    </style>

    <style name="TextInputName">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ResetPasswordStyle">
        <item name="android:textColor">@color/reset_password</item>
    </style>

    <style name="TextInputLogin">
        <item name="android:fontFamily">Roboto</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_input_name</item>
    </style>

    <style name="ButtonStyleLogin" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_Cancel_Tint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/reset_password</item>
    </style>

    <style name="ButtonStyleCancel" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/button_Cancel_Tint</item>
        <item name="android:textColor">@color/button_Cancel</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonPlaceOrder" parent="@style/Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/reset_password</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawableTint">@color/white</item>
    </style>

    <style name="text_input_name">
        <item name="android:textColor">@color/text_input_name</item>
    </style>

    <style name="text_price">
        <item name="android:textColor">@color/price</item>
    </style>

    <style name="RecyclerViewStyle">
        <item name="backgroundTint">@color/menu_cart_bk</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RecyclerViewPriceStyle">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/price</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:drawableTint">@color/black</item>
    </style>

    <style name="ToolbarStyle">
        <item name="backgroundTint">@color/menu_cart_bk</item>
    </style>

</resources>